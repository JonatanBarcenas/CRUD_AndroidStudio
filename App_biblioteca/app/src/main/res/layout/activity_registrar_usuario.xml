<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondodos1"
    android:orientation="vertical"
    tools:context=".vista.RegistrarUsuarioActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/main_margin_top"
        android:text="Registrar Usuario"
        android:textSize="@dimen/titulo_principal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".9"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextClave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="CLAVE"
            android:inputType="number"
            android:padding="@dimen/second_margin_top" />

        <EditText
            android:id="@+id/editTextNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="NOMBRE"
            android:inputType="text"
            android:padding="@dimen/second_margin_top" />

        <EditText
            android:id="@+id/editTextApellidoPaterno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="APELLIDO PATERNO"
            android:inputType="text"
            android:padding="@dimen/second_margin_top" />

        <EditText
            android:id="@+id/editTextApellidoMaterno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="APELLIDO MATERNO"
            android:inputType="text"
            android:padding="@dimen/second_margin_top" />

        <Spinner
            android:id="@+id/rspinnerGenero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="18sp"
            android:padding="@dimen/second_margin_top"/>


        <EditText
            android:id="@+id/editTextCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="CORREO ELECTRONICO"
            android:inputType="textWebEmailAddress"
            android:padding="@dimen/second_margin_top" />

        <EditText
            android:id="@+id/editTextTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="TELEFONO"
            android:inputType="phone"
            android:padding="@dimen/second_margin_top" />

        <Button
            android:id="@+id/buttonAgregarDomicilio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:text="AGREGAR DOMICILIO" />

        <Button
            android:id="@+id/buttonRegistrarUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:layout_margin="@dimen/margin_buttons"
            android:text="Registrar" />


    </LinearLayout>

</LinearLayout>